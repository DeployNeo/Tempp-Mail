{
  "name": "guerrilla-fullstack",
  "version": "1.0.0",
  "description": "Modern temporary email web app with GuerrillaMail API",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "nodemon server/index.js",
    "client:dev": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "start": "node server/index.js",
    "install:all": "npm install && cd client && npm install"
  },
  "dependencies": {
    "express": "^5.0.0",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "socket.io": "^4.7.5",
    "redis": "^4.6.12",
    "axios": "^1.6.2",
    "tough-cookie": "^4.1.3",
    "dotenv": "^16.3.1",
    "express-rate-limit": "^7.1.5",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "temp-mail",
    "guerrilla-mail",
    "disposable-email",
    "react",
    "nodejs",
    "redis"
  ],
  "author": "Neo (@neogotchicks)",
  "license": "MIT"
}
